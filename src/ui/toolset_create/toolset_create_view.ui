<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <!-- Libraries -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <!-- Template -->
  <template class="ToolsetCreateView" parent="GtkBox">

    <!-- Setup view -->
    <child>
      <object class="GtkBox" id="setup_view">
        <property name="orientation">vertical</property>

        <child>
          <object class="AdwCarousel" id="carousel">
            <property name="vexpand">True</property>

            <!-- Page 1: Welcome screen -->
            <child>
              <object class="GtkScrolledWindow" id="welcome_page">
                <property name="hscrollbar-policy">never</property>
                <property name="vscrollbar-policy">automatic</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">24</property>
                    <property name="valign">center</property>
                    <property name="vexpand">True</property>
                    <property name="hexpand">True</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">preferences-other-symbolic</property>
                        <property name="pixel-size">128</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Create new toolset environment</property>
                        <property name="halign">center</property>
                        <property name="wrap">True</property>
                        <style>
                          <class name="title-1"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">This wizard will help you prepare new external toolset for Catalyst Lab. It will download Gentoo Stage3 image and install required tools in it.</property>
                        <property name="halign">center</property>
                        <property name="wrap">True</property>
                        <property name="justify">fill</property>
                        <attributes>
                          <attribute name="foreground" value="grey"/>
                        </attributes>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="halign">center</property>
                        <property name="width-request">300</property>
                        <child>
                          <object class="GtkListBox">
                            <property name="selection-mode">none</property>
                            <style>
                              <class name="boxed-list"/>
                            </style>
                            <child>
                              <object class="AdwButtonRow">
                                <property name="title">Configure toolset</property>
                                <property name="activatable">True</property>
                                <signal name="activated" handler="on_start_row_activated"/>
                                <style>
                                  <class name="suggested-action"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Page 2: Stages screen -->
            <child>
              <object class="GtkScrolledWindow" id="configuration_page">
                <property name="hscrollbar-policy">never</property>
                <property name="vscrollbar-policy">automatic</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="AdwPreferencesGroup" id="stages_list">
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">4</property>
                    <property name="margin-bottom">4</property>
                    <property name="title">Select Gentoo image</property>
                    <property name="description">Select stage3 file to use as a base for the toolset.</property>                      </object>
                </child>
              </object>
            </child>

            <!-- Page 3: Tools screen -->
            <child>
              <object class="GtkScrolledWindow" id="tools_page">
                <property name="hscrollbar-policy">never</property>
                <property name="vscrollbar-policy">automatic</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkBox">
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">4</property>
                    <property name="margin-bottom">4</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="AdwPreferencesGroup" id="tools_list">
                        <property name="title">Select tools to install</property>
                        <!-- <property name="description"></property> -->
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title">Options</property>
                        <!-- <property name="description"></property> -->
                        <child>
                          <object class="AdwActionRow">
                            <property name="title">Allow binary packages</property>
                            <property name="subtitle">Makes the installation quicker</property>
                            <property name="activatable-widget">allow_binpkgs_checkbox</property>
                            <child type="prefix">
                              <object class="GtkCheckButton" id="allow_binpkgs_checkbox">
                                <property name="valign">center</property>
                                <signal name="toggled" handler="on_allow_binpkgs_toggled"/>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwEntryRow" id="environment_name_row">
                            <property name="title">Environment name</property>
                            <property name="show-apply-button">True</property>
                            <property name="text"></property>
                            <signal name="apply" handler="on_environment_name_activate"/>
                            <signal name="changed" handler="on_environment_name_changed"/>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="name_used_label">
                            <property name="label">This environment name is already used.</property>
                            <property name="halign">center</property>
                            <property name="wrap">True</property>
                            <property name="justify">fill</property>
                            <property name="margin-top">12</property>
                            <style>
                              <class name="error"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Bottom panel -->
        <child>
          <object class="GtkBox">
            <property name="homogeneous">True</property>
            <property name="hexpand">True</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <!-- Back button -->
            <child>
              <object class="GtkBox">
                <property name="halign">start</property>
                <child>
                  <object class="GtkButton" id="back_button">
                    <property name="label">Back</property>
                    <property name="sensitive">False</property>
                    <property name="opacity">0.0</property>
                    <signal name="clicked" handler="on_back_pressed"/>
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <!-- Carousel (Centered in Grid) -->
            <child>
              <object class="AdwCarouselIndicatorDots">
                <property name="carousel">carousel</property>
              </object>
            </child>
            <!-- Next button -->
            <child>
              <object class="GtkBox">
                <property name="halign">end</property>
                <child>
                  <object class="GtkButton" id="next_button">
                    <property name="label">Next</property>
                    <property name="sensitive">False</property>
                    <property name="opacity">0.0</property>
                    <signal name="clicked" handler="on_next_pressed"/>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <!-- Install view -->
    <child>
      <object class="MultistageProcessExecutionView" id="install_view"/>
    </child>

  </template>
</interface>

