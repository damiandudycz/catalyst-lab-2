{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run app (meson devenv)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/builddir/src/catalystlab",
      "console": "integratedTerminal",
      "env": {
        "MESON_DEVENV": "1"
      }
    },
    {
      "name": "Module: catalystlab",
      "type": "debugpy",
      "request": "launch",
      "module": "catalystlab",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}",
        "MESON_DEVENV": "1"
      }
    }
  ]
}
