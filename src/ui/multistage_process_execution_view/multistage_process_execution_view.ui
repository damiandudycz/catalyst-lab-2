<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <!-- Libraries -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <!-- Template -->
  <template class="MultistageProcessExecutionView" parent="GtkBox">
    <!-- Execute view -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkLabel" id="title_label">
                <property name="halign">start</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <style>
                  <class name="title-2"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <property name="vscrollbar-policy">automatic</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="AdwPreferencesGroup" id="process_steps_list">
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">4</property>
                    <property name="margin-bottom">4</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Bottom panel -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>

            <!-- Progress bar at the top -->
            <child>
              <object class="GtkProgressBar" id="progress_bar">
                <style>
                  <class name="osd"/>
                </style>
              </object>
            </child>

            <!-- Main content area: buttons, etc -->
            <child>
              <object class="GtkBox">
                <property name="homogeneous">True</property>
                <property name="hexpand">True</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>

                <!-- Cancel and Finish Buttons -->
                <child>
                  <object class="GtkBox">
                    <property name="halign">center</property>
                    <child>
                      <object class="GtkButton" id="cancel_button">
                        <property name="label">Cancel</property>
                        <signal name="clicked" handler="on_cancel_pressed"/>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="finish_button">
                        <property name="label">Finish</property>
                        <signal name="clicked" handler="on_finish_pressed"/>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>

    </child>

  </template>
</interface>

