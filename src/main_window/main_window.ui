<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <!-- Libraries -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <!-- Template -->
  <template class="CatalystlabWindow" parent="AdwApplicationWindow">
    <!-- Window properties -->
    <property name="width-request">280</property>
    <property name="height-request">200</property>
    <property name="default-width">800</property>
    <property name="default-height">800</property>

    <!-- Breakpoint controls collapsed state and toggle button visibility -->
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 400sp</condition>
        <setter object="split_view" property="collapsed">True</setter>
        <setter object="sidebar_toggle_button" property="visible">True</setter>
      </object>
    </child>

    <!-- Window content -->
    <property name="content">
      <object class="AdwOverlaySplitView" id="split_view">

        <property name="sidebar">
          <!-- Use AdwNavigationPage for potential title/back button integration if needed later -->
          <object class="AdwNavigationPage">
            <property name="title">Sidebar</property> <!-- Title for the page itself -->
            <property name="tag">sidebar</property> <!-- Optional tag for identification -->
            <property name="child">
              <!-- Side menu -->
              <object class="AdwToolbarView">
                  <child type="top">
                    <object class="AdwHeaderBar">
                      <property name="title-widget">
                        <object class="AdwWindowTitle">
                            <property name="title">Menu</property>
                        </object>
                      </property>
                    </object>
                  </child>
                  <property name="content">
                    <object class="GtkBox">
                      <property name="orientation">vertical</property>
                      <property name="margin-top">6</property>
                      <property name="margin-bottom">6</property>
                      <property name="margin-start">6</property>
                      <property name="margin-end">6</property>
                      <property name="spacing">6</property>

                      <!-- ListBox for the entries -->
                      <child>
                        <object class="GtkListBox">
                          <property name="selection-mode">none</property> <!-- Rows are activatable, not selectable -->
                          <property name="activate-on-single-click">true</property>
                          <!-- Apply Adwaita styling for lists within sidebars -->
                          <style>
                            <class name="navigation-sidebar"/>
                          </style>

                          <!-- Entry 1: Home -->
                          <child>
                            <object class="GtkListBoxRow">
                              <property name="activatable">true</property> <!-- Enable hover/click -->
                              <property name="tooltip-text" translatable="yes">Home Folder</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-home</property> -->
                              <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                  <property name="margin-start">6</property> <!-- Indent content slightly -->
                                  <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">user-home-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style> <!-- Optional subtle shadow -->
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Home</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                          <!-- Entry 2: Documents -->
                          <child>
                            <object class="GtkListBoxRow">
                              <property name="activatable">true</property>
                              <property name="tooltip-text" translatable="yes">Documents Folder</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-documents</property> -->
                               <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                   <property name="margin-start">6</property>
                                   <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">folder-documents-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Documents</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                          <!-- Entry 3: Downloads -->
                          <child>
                             <object class="GtkListBoxRow">
                              <property name="activatable">true</property>
                              <property name="tooltip-text" translatable="yes">Downloads Folder</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-downloads</property> -->
                               <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                   <property name="margin-start">6</property>
                                   <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">folder-download-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Downloads</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                          <!-- Entry 4: Trash -->
                          <child>
                             <object class="GtkListBoxRow">
                              <property name="activatable">true</property>
                              <property name="tooltip-text" translatable="yes">Trash</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-trash</property> -->
                               <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                   <property name="margin-start">6</property>
                                   <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">user-trash-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Trash</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                        </object>
                      </child>

                    </object><object class="GtkBox">
                      <property name="orientation">vertical</property>

                      <!-- ListBox for the entries -->
                      <child>
                        <object class="GtkListBox">
                          <property name="selection-mode">none</property> <!-- Rows are activatable, not selectable -->
                          <property name="activate-on-single-click">true</property>
                          <!-- Apply Adwaita styling for lists within sidebars -->
                          <style>
                            <class name="navigation-sidebar"/>
                          </style>

                          <!-- Entry 1: Home -->
                          <child>
                            <object class="GtkListBoxRow">
                              <property name="activatable">true</property> <!-- Enable hover/click -->
                              <property name="tooltip-text" translatable="yes">Home Folder</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-home</property> -->
                              <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                  <property name="margin-start">6</property> <!-- Indent content slightly -->
                                  <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">user-home-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style> <!-- Optional subtle shadow -->
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Home</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                          <!-- Entry 2: Documents -->
                          <child>
                            <object class="GtkListBoxRow">
                              <property name="activatable">true</property>
                              <property name="tooltip-text" translatable="yes">Documents Folder</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-documents</property> -->
                               <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                   <property name="margin-start">6</property>
                                   <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">folder-documents-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Documents</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                          <!-- Entry 3: Downloads -->
                          <child>
                             <object class="GtkListBoxRow">
                              <property name="activatable">true</property>
                              <property name="tooltip-text" translatable="yes">Downloads Folder</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-downloads</property> -->
                               <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                   <property name="margin-start">6</property>
                                   <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">folder-download-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Downloads</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                          <!-- Entry 4: Trash -->
                          <child>
                             <object class="GtkListBoxRow">
                              <property name="activatable">true</property>
                              <property name="tooltip-text" translatable="yes">Trash</property>
                              <!-- Connect to an action in code: <property name="action-name">win.go-trash</property> -->
                               <property name="child">
                                <object class="GtkBox">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">10</property>
                                   <property name="margin-start">6</property>
                                   <property name="margin-end">6</property>
                                   <property name="margin-top">3</property>
                                   <property name="margin-bottom">3</property>
                                  <child>
                                    <object class="GtkImage">
                                      <property name="icon-name">user-trash-symbolic</property>
                                      <style><class name="icon-dropshadow"/></style>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkLabel">
                                      <property name="label" translatable="yes">Trash</property>
                                      <property name="halign">start</property>
                                      <property name="hexpand">true</property>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>

                        </object>
                      </child>

                    </object>
                  </property>
               </object>

            </property>
          </object>
        </property>

        <!-- Main Content Area -->
        <property name="content">
          <object class="AdwNavigationPage">
             <property name="title">Main Content</property>
             <property name="child">
               <object class="AdwToolbarView">
                  <child type="top">
                    <object class="AdwHeaderBar">
                      <child type="start">
                        <object class="GtkButton" id="sidebar_toggle_button">
                          <property name="icon-name">sidebar-show-symbolic</property>
                          <property name="tooltip-text" translatable="yes">Toggle sidebar</property>
                          <property name="visible">False</property>
                          <signal name="clicked" handler="sidebar_toggle_button_clicked"/>
                        </object>
                      </child>
                      <property name="title-widget">
                        <object class="AdwWindowTitle">
                            <property name="title">Catalyst Lab</property>
                        </object>
                      </property>
                      <child type="end">
                        <object class="GtkMenuButton">
                          <property name="icon-name">open-menu-symbolic</property>
                          <property name="tooltip-text">Menu</property>
                          <property name="menu-model">primary_menu</property>
                        </object>
                      </child>
                    </object>
                  </child>
                  <property name="content">
                    <object class="GtkLabel">
                      <property name="label">Main Content Area</property>
                    </object>
                  </property>
               </object>
             </property>
          </object>
        </property>

      </object>
    </property>

  </template>

  <!-- Menu -->
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About CatalystLab</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>

</interface>
