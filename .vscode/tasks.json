{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Meson: setup",
      "type": "shell",
      "command": "meson setup builddir",
      "problemMatcher": "$meson-gcc",
      "group": "build"
    },
    {
      "label": "Meson: compile",
      "type": "shell",
      "command": "ninja -C builddir",
      "problemMatcher": "$meson-gcc",
      "group": "build"
    },
    {
      "label": "Meson: devenv (activate in shell)",
      "type": "shell",
      "command": "meson devenv -C builddir bash -lc 'echo VSCode devenv ready'",
      "isBackground": true
    }
  ]
}
