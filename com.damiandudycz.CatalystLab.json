{
    "id" : "com.damiandudycz.CatalystLab",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "catalystlab",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
	"--device=kvm",
        "--socket=wayland",
        "--filesystem=xdg-run/catalystlab-root-helper:create",
        "--filesystem=host:ro",
        "--filesystem=/tmp",
        "--filesystem=/var/tmp",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"python3-requests.json",
	"squashfs-tools.json",
        {
            "name" : "catalystlab",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : ["--libdir=lib"],
            "build-commands": [],
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "main",
                    "url" : "https://github.com/damiandudycz/catalyst-lab-2"
                }
            ]
        }
    ]
}
