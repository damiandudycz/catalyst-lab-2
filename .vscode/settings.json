{
    // Search path for Pylance so local package imports resolve
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    // Load environment variables from .env (sets PYTHONPATH, MESON_DEVENV)
    "python.envFile": "${workspaceFolder}/.env",
    // Optional: tone down missing-import noise until build env is active
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "warning"
    }
}