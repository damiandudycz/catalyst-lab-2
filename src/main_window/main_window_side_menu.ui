<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <!-- Libraries -->
  <requires lib="gtk" version="4.0"/>

  <!-- Template -->
  <template class="CatalystlabWindowSideMenu" parent="GtkBox">
    <property name="orientation">vertical</property>

    <!-- ListBox for the entries -->
    <child>
      <object class="GtkListBox">
        <property name="selection-mode">single</property>

        <!-- Apply Adwaita styling for lists within sidebars -->
        <style><class name="navigation-sidebar"/></style>

        <!-- Entry 1: Home -->
        <child>
          <object class="GtkListBoxRow">
            <property name="tooltip-text" translatable="yes">Home Folder</property>
            <!-- Connect to an action in code: <property name="action-name">win.go-home</property> -->
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">10</property>
                <property name="margin-start">6</property>
                <property name="margin-end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">user-home-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Home</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Entry 2: Documents -->
        <child>
          <object class="GtkListBoxRow">
            <property name="tooltip-text" translatable="yes">Documents Folder</property>
            <!-- Connect to an action in code: <property name="action-name">win.go-documents</property> -->
             <property name="child">
              <object class="GtkBox">
                <property name="spacing">10</property>
                 <property name="margin-start">6</property>
                 <property name="margin-end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">folder-documents-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Documents</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Entry 3: Downloads -->
        <child>
           <object class="GtkListBoxRow">
            <property name="tooltip-text" translatable="yes">Downloads Folder</property>
            <!-- Connect to an action in code: <property name="action-name">win.go-downloads</property> -->
             <property name="child">
              <object class="GtkBox">
                <property name="spacing">10</property>
                 <property name="margin-start">6</property>
                 <property name="margin-end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">folder-download-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Downloads</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Entry 4: Trash -->
        <child>
           <object class="GtkListBoxRow">
            <property name="tooltip-text" translatable="yes">Trash</property>
            <!-- Connect to an action in code: <property name="action-name">win.go-trash</property> -->
             <property name="child">
              <object class="GtkBox">
                <property name="spacing">10</property>
                 <property name="margin-start">6</property>
                 <property name="margin-end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">user-trash-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Trash</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
